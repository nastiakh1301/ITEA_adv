from datetime import datetime

class Application:
    global_id = 0

    def __init__(self, name, serial_number, status):
        self.__id = Application.global_id + 1
        self.date_time = datetime.now()
        self.name = name
        self.serial_number = serial_number
        self.status = status
        Application.global_id += 1

    def active_time(self):
        if self.status == "active":
            time = datetime.now() - self.date_time
        return f"Время активности заявки: {time}"


    def change_status(self):
        if self.status == "active":
            self.status = "non active"
        else:
            self.status = "active"
        return f"Статус заявки: {self.status}"


    def return_id(self):
        return f"ID заявки {self._Application__id}"


print(dir(Application))

r1 = Application("HBJHB", 123, "active")
print(dir(r1))
print(r1.return_id())
